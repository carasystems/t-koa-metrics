{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug current",
      "program": "${workspaceFolder}/node_modules/.bin/mocha",
      "args": [
        "-t",
        "false",
        "--bail",
        "${file}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true
    }
  ]
}
